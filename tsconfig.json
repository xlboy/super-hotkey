{
  "compilerOptions": {
    "target": "ES2015",
    "noEmit": true,
    "pretty": true,
    "lib": ["DOM", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "strictPropertyInitialization": false
  },
  "include": ["./"],
  "exclude": ["./example"]
}
